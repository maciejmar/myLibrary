<h2 class="page-header">Search book</h2>
<form action="/books" method="GET">
    <div class=form-row">
        <div class="form-item">    
            <label>Title</label>
            <input type="text" name="title" 
            value="<%= searchConstrains.title %>">
        </div>
    </div>    
    <br>
    <div class="form-row">
        <div class="form-item">
            <label>Published After</label>
            <input type="date" name="publishedAfter" 
            value="<%= searchConstrains.publishedAfter %>">
        </div>
    
        <div class="form-item">    
            <label>Published Before</label>
            <input type="date" name="publishedBefore" value="<%= 
            searchConstrains.publishedBefore %>">
        </div>
  </div>
  <div class="form-row form-row-end">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>
<div>
    <br>
       <%-include('../partials/bookGrid',{ books:books, large:true}) %>
  </div>


